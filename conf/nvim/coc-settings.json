{
  "tsserver.npm": "/usr/local/bin/npm",
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",

  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },

    "ocaml": {
      "command": "ocamllsp",
      "filetypes": ["ocaml"]
    },

    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  }
}
